<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/night_sky</item>
        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>
    <style name="MyTitleTextStyle">
        <item name="android:textColor">@color/bright_sun</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="background">@color/night_sky</item>
    </style>
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fui_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/fui_slide_out_left</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/title</item>
    </style>
    <style name="LoginStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/blue_sky</item>
    </style>

</resources>
