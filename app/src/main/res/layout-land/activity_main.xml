<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:background="@color/white"
    tools:context=".ui.main.MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#32B1A643"
            app:title="@string/sticker"
            app:titleTextColor="@color/night_sky">
            <FrameLayout
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:background="@color/night_sky"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="30dp">
                <ImageButton
                    android:id="@+id/alert_button"
                    android:onClick="alertMe"
                    android:layout_width="24dp"
                    android:layout_height="25dp"
                    android:backgroundTint="@color/bright_sun"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_local_play_black_24dp"
                    android:contentDescription="@string/app_name"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"

        tools:listitem="@layout/item_sticker" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/night_sky"
        android:tint="@color/bright_sun"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        app:layout_behavior="com.bankmtk.neuromemory.ui.common.FABBehavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>