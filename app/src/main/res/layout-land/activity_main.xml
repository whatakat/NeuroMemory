<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:background="@color/white"
    tools:context=".ui.main.MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#32B1A643"
            app:title="@string/sticker"
            app:titleTextColor="@color/night_sky">
            <FrameLayout
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/night_sky"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="30dp">
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"

        tools:listitem="@layout/item_sticker" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:alpha="0.20"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="50dp"
        app:backgroundTint="@color/black"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_behavior="com.bankmtk.neuromemory.ui.common.FABBehavior"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/alert_button"
        android:onClick="alertMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:alpha="0.20"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_visibility_black_24dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/black"
        android:contentDescription="@string/app_name"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>