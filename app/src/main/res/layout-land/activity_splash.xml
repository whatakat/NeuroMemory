<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/starsb"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/starsback"/>

    <ImageView
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/stars" />

    <ImageView
        android:id="@+id/starsbb"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/starsbackb" />


    <ImageView
        android:id="@+id/trackCenter"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="75dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/track" />

    <ImageView
        android:id="@+id/starCenter"
        android:layout_width="3dp"
        android:layout_height="@dimen/dps"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/sun" />
    <ImageView
        android:id="@+id/star"
        android:layout_width="@dimen/dp"
        android:layout_height="@dimen/dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="75dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/star" />
    <ImageView
        android:id="@+id/meteorite"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/meteorite" />
    <ImageView
        android:id="@+id/moon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center|bottom"
        android:layout_marginEnd="75dp"
        android:src="@drawable/fullmoon"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:id="@+id/tree"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="bottom"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tree" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imageButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="6dp"
        app:backgroundTint="@color/black"
        android:src="@drawable/neuron_time"
        android:contentDescription="@string/app_name" />

</FrameLayout>