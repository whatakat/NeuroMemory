<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/stars" />
    <ImageView
        android:id="@+id/star"
        android:layout_width="@dimen/dp"
        android:layout_height="@dimen/dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="75dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/star" />
    <ImageView
        android:id="@+id/trackCenter"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="75dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/track" />
    <ImageView
        android:id="@+id/starsb"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/starsback"/>


    <ImageView
        android:id="@+id/starsbb"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/starsbackbl" />


    <ImageView
        android:id="@+id/meteorite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/earth" />
    <ImageView
        android:id="@+id/moon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center|bottom"
        android:layout_marginEnd="100dp"
        android:src="@drawable/fullmoon"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:id="@+id/tree"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="bottom"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tree" />
    <ImageView
        android:id="@+id/starCenter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="70dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_navigation_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0.40"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="41dp"
        android:layout_marginStart="6dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_blur_on_black_24dp"
        android:contentDescription="@string/app_name" />

</FrameLayout>