<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:background="@color/white"
    tools:context=".ui.main.MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:background="@color/black"
            app:title="@string/sticker"
            app:titleTextColor="@color/bright_sun">
            <FrameLayout
                android:layout_width="@dimen/twenty"
                android:layout_height="14dp"
                android:layout_marginStart="@dimen/five">
                <ImageView
                    android:id="@+id/alert_visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/status_list"
                    android:contentDescription="@string/app_name"/>

            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="5"
        tools:listitem="@layout/item_sticker"
        android:transitionName="@string/title"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:alpha="0.50"
        app:backgroundTint="@color/night_sky"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="275dp"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_behavior="com.bankmtk.neuromemory.ui.common.FABBehavior"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/alert_button"
        android:onClick="alertMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:alpha="0.20"
        android:layout_marginBottom="55dp"
        android:src="@drawable/ic_visibility_black_24dp"
        android:layout_gravity="bottom|center"
        android:backgroundTint="@color/black"
        android:contentDescription="@string/app_name"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>