<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="25dp"
    card_view:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:soundEffectsEnabled="true">
        <TextView
            android:id="@+id/titleStick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            tools:text="@string/title"
            android:textSize="16sp"
            android:textColor="@color/night_sky"/>

    <TextView
            android:id="@+id/langOneI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|clip_vertical|center_horizontal|center_vertical"
            android:text="@string/text"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible"
        android:layout_below="@id/titleStick"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/langTwoI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|clip_vertical|center_horizontal|center_vertical"
            android:text="@string/text"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="invisible"
            android:layout_below="@id/titleStick"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>




</androidx.cardview.widget.CardView>