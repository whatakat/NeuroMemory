<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:layout_marginStart="90dp"
    card_view:cardElevation="@dimen/twenty"
    android:layout_marginTop="350dp"
    card_view:cardCornerRadius="110dp"
    android:alpha="0.9"
    android:backgroundTint="@color/black"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:alpha="1"
        android:background="@drawable/neurom_stickb"
        android:backgroundTint="@color/white"
        >
        <ImageView
            android:id="@+id/pulse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.09"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/titleStick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/fifty"
            tools:text="@string/title"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/bright_sun"
            android:background="@color/night_sky"
            android:transitionName="@string/title"/>


        <ImageView
            android:id="@+id/title_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="14dp"
            android:background="@color/bright_sun"
            android:contentDescription="@string/app_name"/>

    <TextView
            android:id="@+id/langOneI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|clip_vertical"
            android:text="@string/text"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible"
            android:shadowColor="@color/black"
            android:layout_below="@id/titleStick"
        android:alpha="1"/>
        <ImageView
            android:id="@+id/status_star"
            android:layout_width="85dp"
            android:layout_height="26dp"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/title_stars"
            android:src="@drawable/progress"
            android:background="@drawable/ic_st_zero"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/langTwoI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|clip_vertical"
            android:text="@string/text"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:alpha="0"
            android:layout_below="@id/titleStick"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="10dp"
            android:alpha="0.35"
            card_view:fabSize="mini"
            android:visibility="gone"
            android:backgroundTint="@color/black"
            android:src="@drawable/alert_animation_icon"
            android:contentDescription="@string/app_name"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="99dp"
            android:layout_marginTop="9dp"
            android:alpha="0.2"
            card_view:fabSize="mini"
            android:backgroundTint="@color/black"
            android:src="@drawable/status_volume"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

