<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/five"
    android:layout_marginTop="1dp"
    android:layout_marginRight="@dimen/five"
    android:layout_marginBottom="@dimen/five"
    card_view:cardElevation="@dimen/five"
    card_view:cardCornerRadius="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titleStick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/three"
            android:layout_marginTop="@dimen/three"
            android:layout_marginEnd="@dimen/three"
            tools:text="@string/title"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/bright_sun"
            android:background="@color/night_sky"
            android:transitionName="@string/title"/>

        <ImageView
            android:id="@+id/status_star"
            android:layout_width="85dp"
            android:layout_height="26dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@+id/title_stars"
            android:src="@drawable/progress"
            android:background="@drawable/ic_st_zero"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/title_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/three"
            android:layout_marginEnd="@dimen/five"
            android:background="@color/bright_sun"
            android:contentDescription="@string/app_name"/>

    <TextView
            android:id="@+id/langOneI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|clip_vertical|center_horizontal|center_vertical"
            android:text="@string/text"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible"
        android:layout_below="@id/titleStick" />
        <TextView
            android:id="@+id/langTwoI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|clip_vertical|center_horizontal|center_vertical"
            android:text="@string/text"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            android:background="@color/night_sky"
            android:layout_below="@id/titleStick"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:alpha="0.70"
            android:backgroundTint="@color/night_sky"
            android:src="@drawable/ic_check_black_24dp"
            android:visibility="gone"
            android:contentDescription="@string/app_name"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/sixty"
            android:layout_marginBottom="@dimen/five"
            android:alpha="0.40"
            card_view:fabSize="mini"
            android:backgroundTint="@color/night_sky"
            android:src="@drawable/ic_volume_mute_black_24dp"
            android:visibility="gone"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

